Character Princess( words n; tof f) {
  words name is n.
  tof famous is f.

  Action introduceSelf() returns nothing {
    say( my name + ": Hi, my name is " + my name + "!").
  }
  Action audition(words part; words experience) returns nothing {
	if(my famous = true) {
        say(my name + ": I am auditioning for the part of " + part + " in Frozen.").
        say("In case you didn't recognize me, I was in Disney's " + experience + ".").
    }
~    else {
        say(my name + ": Hello, my name is " + my name + ". I'm auditioning for the part of " + part + " in Frozen.").
        say("I don't have any experience, but I think I have great potential! Plus, all of these old princesses only know how to play roles that depend on men. I can be a strong independent and fearless princess!!").
    }~
  }
}


Chapter plot() returns nothing {
  Character Princess Anna is new Princess( "Anna"; false).
  Anna, introduceSelf().
 ~~ Anna, audition("Anna"; "No exprience").
}
