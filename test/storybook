#!/bin/sh

# Compile c file and run
program=`basename $1 .sbk`
.././run < $1 > "${program}.c"

if [ -s "$program.c" ]
then
  gcc -g $program.c -o $program
  if [ -f "$program" ]
  	then
    ./$program
    rm -rf *.dSYM
    rm -f "$program.c"
    rm -f "$program"
  else
  	echo "C code didn't compile"
  fi

else
	echo "Storybook didn't compile"
echo "  /\_/\\ !! _
=( °∩° )= //
  )   (  //
 (__ __)//"
fi

